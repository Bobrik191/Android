<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rootLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    tools:context=".MainActivity">

    <!-- Циферблат з позначенням сторін світу -->
    <ImageView
        android:id="@+id/compassDial"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_centerInParent="true"
        android:src="@drawable/compass_dial"
        android:contentDescription="Циферблат компаса" />

    <!-- Стрілка компаса -->
    <ImageView
        android:id="@+id/compassArrow"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerInParent="true"
        android:src="@drawable/compass_arrow"
        android:contentDescription="Стрілка компаса" />

    <!-- Текст для відображення напряму -->
    <TextView
        android:id="@+id/angleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Азимут: 0°"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:layout_below="@id/compassDial"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp" />
</RelativeLayout>
